@import url(https://fonts.googleapis.com/css?family=Lato:400,700,900)
$primary = #0077aa
$secondary = #777

*
  box-sizing border-box

body
  margin-top 2rem
  font-family 'Lato', sans-serif
  background lighten($secondary, 7)
  color white
  -webkit-font-smoothing antialiased
  font-size 1.1rem

//.grid-item

// the card component
.card
  position relative
  background lighten($primary, 5)
  max-width 20rem
  margin 0rem auto 2rem
  border solid 5px $primary
  border-radius .4rem
  //float left
  //padding 5.5rem 2.5rem 1rem

  &__avatar_url
    position absolute
    top 25%
    left 50%
    transform translate(-50%, -50%)
    width 10rem
    height auto
    text-align center
    margin 0 auto
    display block
    border-radius 50%
    background $primary
    padding 5px
    max-width 100%

    transition 0.2s

    &:hover
      background darken($primary, 5)

  &__top
    margin 3px
    border solid 5px $primary
    background-color #fff
    border-radius 2rem

  &__middle
    margin-top 175px

  &__reponame
    font-size 1rem
    //font-weight 900
    padding 5px
    text-align left
    margin auto

  &__link
    color black
    //border-bottom solid 2px white
    text-decoration none
    //margin-bottom 0
    //padding-bottom 0

    &:hover
      opacity 0.8

  &__notfound
    text-align center
    margin 0 auto
    padding 1rem


dl
  margin 0
  padding 0

dt
  text-align left

dd
  text-align left

dt
  font-weight 900
  margin-bottom .2rem

dd
  margin 0 0 1rem 0
